    "        \"trial\": trial_idx,\n",
    "        \"image\": img_path,\n",
    "        \"typed_color\": typed_color.lower().strip(),\n",
    "        \"rt\": rt,\n",
    "        \"audio_input\": audio_input\n",
    "    })\n",
    " # to pause the experiment\n",
    "if st.session_state.paused:\n",
    "    st.subheader(\"Experiment paused\")\n",
    "    if st.button(\"Resume\"):\n",
    "        st.session_state.paused = False\n",
    "    st.stop()   "
