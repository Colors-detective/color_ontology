    "#to start the experiment(initialization)\n",
    "if \"stimuli\" not in st.session_state:\n",
    "    st.session_state.stimuli = sorted(os.listdir(\"stimuli/\"))\n",
    "\n",
    "if \"trial_idx\" not in st.session_state:\n",
    "    st.session_state.trial_idx = 0\n",
    "\n",
    "if \"paused\" not in st.session_state:\n",
    "    st.session_state.paused = False\n",
    "\n",
    "if \"results\" not in st.session_state:\n",
    "    st.session_state.results = []\n",
    "\n",
    "if \"start_time\" not in st.session_state:\n",
    "    st.session_state.start_time = None\n"
   ]
  },

    "# trial workflow for the end and layout of the stimuli and time\n",
    "\n",
    "trial = st.session_state.trial_idx\n",
    "\n",
    "if trial >= len(st.session_state.stimuli):\n",
    "    st.success(\"Experiment finished!\")\n",
    "    st.write(st.session_state.results)\n",
    "    st.stop()\n",
    "\n",
    "img_path = st.session_state.stimuli[trial]\n",
    "st.image(img_path, caption=f\"Trial {trial+1}\")\n",
    "\n",
    "# Start timing if first appearance of trial\n",
    "if st.session_state.start_time is None:\n",
    "    st.session_state.start_time = time.time()\n",
    "\n",
    "response = st.text_input(\"Your answer\", key=f\"resp_{trial}\")"
   ]
  },
  
    "# to save the results\n",
    "def save_trial_result(trial_idx, img_path, typed_color, rt, audio_input):\n",
